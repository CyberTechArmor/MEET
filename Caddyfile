# MEET - Caddy Reverse Proxy Configuration
# Supports both domain names (Let's Encrypt) and IP addresses (self-signed)

# Global options
{
    # Email for Let's Encrypt (used for domain-based SSL)
    email {$ACME_EMAIL:admin@example.com}

    # For debugging, uncomment:
    # debug
}

# Main site block
{$MEET_DOMAIN:localhost} {
    # TLS configuration:
    # - For domains: Caddy auto-obtains Let's Encrypt certificates
    # - For IPs: Set TLS_MODE=internal in .env for self-signed certs
    # - For localhost: HTTP only (no TLS needed)
    {$TLS_MODE:}

    # Enable compression (but not for WebSocket)
    encode gzip zstd

    # LiveKit WebSocket - must come before other handlers
    # Proxies wss:// connections to LiveKit server
    handle /livekit/* {
        uri strip_prefix /livekit
        reverse_proxy livekit:7880 {
            # WebSocket support
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            # Disable buffering for real-time WebSocket
            flush_interval -1
            # Transport settings for WebSocket
            transport http {
                keepalive 30s
                keepalive_idle_conns 10
            }
        }
    }

    # API routes - proxy to backend
    handle /api/* {
        reverse_proxy meet-api:8080
    }

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Frontend - everything else
    handle {
        reverse_proxy meet-frontend:80
    }

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format console
    }
}
