# MEET - Caddy Reverse Proxy Configuration
# Automatic HTTPS with Let's Encrypt

{$MEET_DOMAIN:localhost} {
    # Enable compression
    encode gzip zstd

    # API routes - proxy to backend (keep /api prefix, API expects it)
    handle /api/* {
        reverse_proxy meet-api:8080
    }

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Frontend - everything else
    handle {
        reverse_proxy meet-frontend:80
    }

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format console
    }
}
