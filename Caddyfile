# MEET - Caddy Reverse Proxy Configuration
# Automatic HTTPS with Let's Encrypt

{$MEET_DOMAIN:localhost} {
    # Enable compression
    encode gzip zstd

    # API routes
    handle /api/* {
        reverse_proxy meet-api:8080
    }

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Frontend - everything else
    handle {
        reverse_proxy meet-frontend:80
    }

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format console
    }
}

# Local development (HTTP only for localhost)
:80 {
    @localhost host localhost 127.0.0.1

    handle @localhost {
        encode gzip

        handle /api/* {
            reverse_proxy meet-api:8080
        }

        handle {
            reverse_proxy meet-frontend:80
        }
    }
}
